<odoo>
    <template id="report_stock_picking_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <t t-foreach="picking.move_ids_without_package" t-as="move_line">
                    <t t-foreach="move_line.move_line_ids" t-as="line">
                        <div style="page-break-after: always;">
                            <!-- Título principal -->
                            <h1 style="font-size: 65px; border: 4px solid black; border-radius: 15px; padding: 25px; margin: 0; text-align: center;">
                                # <t t-esc="line.lot_id.name" t-if="line.lot_id"/>
                            </h1>

                            <!-- Campos extendidos con mayor protagonismo en los valores -->
                            <h2 style="font-size: 30px; color: grey;">GRAMAJE:</h2>
                            <h2 style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.gramaje"/></h2>
                            
                            <h2 style="font-size: 30px; color: grey;">ANCHO:</h2>
                            <h2 style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.ancho"/></h2>
                            
                            <h2 style="font-size: 30px; color: grey;">TIPO:</h2>
                            <h2 style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.tipo"/></h2>
                            
                            <h2 style="font-size: 30px; color: grey;">KILOS:</h2>
                            <h2 style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.kilos"/></h2>
                            
                            <h2 style="font-size: 30px; color: grey;">PLANTA INGRESO:</h2>
                            <h2 style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.planta"/></h2>

                            <!-- Línea divisoria -->
                            <hr style="border: 2px solid black; margin: 20px 0;" />

                            <p style="font-size: 25px; color: grey;">TRANSFERENCIA:</p>
                            <p style="font-size: 35px; font-weight: bold;"><t t-esc="picking.name"/></p>
                            
                            <p style="font-size: 25px; color: grey;">PRODUCTO:</p>
                            <p style="font-size: 35px; font-weight: bold;"><t t-esc="line.product_id.display_name"/></p>
                            
                            <p style="font-size: 25px; color: grey;">CANTIDAD:</p>
                            <p style="font-size: 35px; font-weight: bold;"><t t-esc="line.quantity"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <!-- Acción de reporte -->
    <record id="action_report_stock_picking_test" model="ir.actions.report">
        <field name="name">Etiqueta Personalizada</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_stock_report.report_stock_picking_test</field>
        <field name="report_file">custom_stock_report.report_stock_picking_test</field>
    </record>
</odoo>
