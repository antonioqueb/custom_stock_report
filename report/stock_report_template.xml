<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_stock_picking_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <t t-foreach="picking.move_ids_without_package" t-as="move_line">
                    <t t-foreach="move_line.move_line_ids" t-as="line">
                        <div style="page-break-after: always;">
                            <!-- Título principal -->
                            <h1 style="font-size: 80px; text-align: center;">Reporte de Producto</h1>

                            <!-- Detalles del reporte con letras grandes -->
                            <h2 style="font-size: 60px;">Transferencia: <t t-esc="picking.name"/></h2>
                            <h2 style="font-size: 60px;">Producto: <t t-esc="line.product_id.display_name"/></h2>
                            <h2 style="font-size: 60px;">Cantidad: <t t-esc="line.quantity"/></h2>
                            <!-- Campos extendidos -->
                            <h2 style="font-size: 60px;">Gramaje: <t t-esc="move_line.gramaje"/></h2>
                            <h2 style="font-size: 60px;">Ancho: <t t-esc="move_line.ancho"/></h2>
                            <h2 style="font-size: 60px;">Tipo: <t t-esc="move_line.tipo"/></h2>
                            <h2 style="font-size: 60px;">Kilos: <t t-esc="move_line.kilos"/></h2>
                            <h2 style="font-size: 60px;">Planta: <t t-esc="move_line.planta"/></h2>

                            <!-- Información de serie/folio -->
                            <h2 style="font-size: 60px;">Folio/Número de Serie: <t t-esc="line.lot_id.name" t-if="line.lot_id"/></h1>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <!-- Acción de reporte -->
    <record id="action_report_stock_picking_test" model="ir.actions.report">
        <field name="name">Stock Picking Test Report</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_stock_report.report_stock_picking_test</field>
        <field name="report_file">custom_stock_report.report_stock_picking_test</field>
    </record>
</odoo>
