<odoo>
    <template id="report_stock_picking_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <t t-foreach="picking.move_ids_without_package" t-as="move_line">
                    <t t-foreach="move_line.move_line_ids" t-as="line">
                        <div style="page-break-inside: avoid;">

                            <!-- Título principal en el centro -->
                            <div style="text-align: center;">
                                <h1 style="font-size: 50px; border: 2px solid black; border-radius: 10px; padding: 15px; margin: 0;">
                                    # <t t-esc="line.lot_id.name" t-if="line.lot_id"/>
                                </h1>
                            </div>

                            <!-- Contenido en dos columnas -->
                            <div style="display: flex; justify-content: space-between; padding: 20px;">
                                <!-- Columna izquierda -->
                                <div style="width: 48%;">
                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">GRAMAJE:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.gramaje"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">ANCHO:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.ancho"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">TIPO:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.tipo"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">KILOS:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.kilos"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">PLANTA INGRESO:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.planta"/></span>
                                    </div>
                                </div>

                                <!-- Columna derecha -->
                                <div style="width: 48%;">
                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">TRANSFERENCIA:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="picking.name"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">PRODUCTO:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="line.product_id.display_name"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">CANTIDAD:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="line.quantity"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">FECHA:</span>
                                        <span style="font-size: 35px; font-weight: bold;"><t t-esc="picking.scheduled_date.strftime('%d/%m/%Y')"/></span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">PROVEEDOR:</span>
                                        <span style="font-size: 35px; font-weight: bold;">
                                            <t t-esc="picking.partner_id.name" t-if="picking.partner_id"/>
                                            <t t-else="">N/A</t>
                                        </span>
                                    </div>

                                    <div style="display: flex; justify-content: space-between;">
                                        <span style="font-size: 35px; color: #505050;">DOCUMENTO DE ORIGEN:</span>
                                        <span style="font-size: 35px; font-weight: bold;">
                                            <t t-esc="picking.origin" t-if="picking.origin"/>
                                            <t t-else="">N/A</t>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <!-- Acción de reporte -->
    <record id="action_report_stock_picking_test" model="ir.actions.report">
        <field name="name">Etiqueta Personalizada</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_stock_report.report_stock_picking_test</field>
        <field name="report_file">custom_stock_report.report_stock_picking_test</field>
    </record>
</odoo>
