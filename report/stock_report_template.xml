<odoo>
    <template id="report_stock_picking_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <t t-foreach="picking.move_ids_without_package" t-as="move_line">
                    <t t-foreach="move_line.move_line_ids" t-as="line">
                        <div style="page-break-after: always;">
                            <!-- Título principal -->
                            <h1 style="font-size: 65px; border: 4px solid black; border-radius: 15px; padding: 25px; margin: 0; text-align: center;">
                                # <t t-esc="line.lot_id.name" t-if="line.lot_id"/>
                            </h1>

                            <!-- Contenido con títulos y valores alineados horizontalmente -->
                            <div>
                                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                    <span style="font-size: 30px; color: grey;">GRAMAJE:</span>
                                    <span style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.gramaje"/></span>
                                </div>
                                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                    <span style="font-size: 30px; color: grey;">ANCHO:</span>
                                    <span style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.ancho"/></span>
                                </div>
                                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                    <span style="font-size: 30px; color: grey;">TIPO:</span>
                                    <span style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.tipo"/></span>
                                </div>
                                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                    <span style="font-size: 30px; color: grey;">KILOS:</span>
                                    <span style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.kilos"/></span>
                                </div>
                                <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                    <span style="font-size: 30px; color: grey;">PLANTA INGRESO:</span>
                                    <span style="font-size: 55px; font-weight: bold;"><t t-esc="move_line.planta"/></span>
                                </div>
                            </div>

                            <!-- Línea divisoria -->
                            <hr style="border: 2px solid black; margin: 20px 0;" />

                            <!-- Nuevos campos adicionales alineados -->
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                <span style="font-size: 25px; color: grey;">TRANSFERENCIA:</span>
                                <span style="font-size: 35px; font-weight: bold;"><t t-esc="picking.name"/></span>
                            </div>
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                <span style="font-size: 25px; color: grey;">PRODUCTO:</span>
                                <span style="font-size: 35px; font-weight: bold;"><t t-esc="line.product_id.display_name"/></span>
                            </div>
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 15px 0;">
                                <span style="font-size: 25px; color: grey;">CANTIDAD:</span>
                                <span style="font-size: 35px; font-weight: bold;"><t t-esc="line.quantity"/></span>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <!-- Acción de reporte -->
    <record id="action_report_stock_picking_test" model="ir.actions.report">
        <field name="name">Etiqueta Personalizada</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_stock_report.report_stock_picking_test</field>
        <field name="report_file">custom_stock_report.report_stock_picking_test</field>
    </record>
</odoo>
