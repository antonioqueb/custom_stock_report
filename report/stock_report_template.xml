<odoo>
    <template id="report_stock_picking_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="picking">
                <t t-foreach="picking.move_ids_without_package" t-as="move_line">
                    <t t-foreach="move_line.move_line_ids" t-as="line">
                        <div style="page-break-inside: avoid;">

                            <!-- Título principal en el centro -->
                            <div style="text-align: center;">
                                <h1 style="font-size: 50px; border: 2px solid black; border-radius: 10px; padding: 15px; margin: 0;">
                                    # <t t-esc="line.lot_id.name" t-if="line.lot_id"/>
                                </h1>
                            </div>

                            <!-- Contenido en dos columnas -->
                            <div style="display: flex; justify-content: space-between; padding: 20px;">
                                <!-- Columna izquierda -->
                                <div style="width: 48%;">
                                    <p style="font-size: 22px; color: grey;">GRAMAJE:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.gramaje"/></p>
                                    
                                    <p style="font-size: 22px; color: grey;">ANCHO:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.ancho"/></p>

                                    <p style="font-size: 22px; color: grey;">TIPO:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.tipo"/></p>

                                    <p style="font-size: 22px; color: grey;">KILOS:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.kilos"/></p>

                                    <p style="font-size: 22px; color: grey;">PLANTA INGRESO:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="move_line.planta"/></p>
                                </div>

                                <!-- Columna derecha -->
                                <div style="width: 48%;">
                                    <p style="font-size: 22px; color: grey;">TRANSFERENCIA:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="picking.name"/></p>
                                    
                                    <p style="font-size: 22px; color: grey;">PRODUCTO:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="line.product_id.display_name"/></p>

                                    <p style="font-size: 22px; color: grey;">CANTIDAD:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="line.quantity"/></p>

                                    <p style="font-size: 22px; color: grey;">FECHA:</p>
                                    <p style="font-size: 35px; font-weight: bold;"><t t-esc="picking.scheduled_date.strftime('%d/%m/%Y')"/></p>

                                    <p style="font-size: 22px; color: grey;">PROVEEDOR:</p>
                                    <p style="font-size: 35px; font-weight: bold;">
                                        <t t-esc="picking.partner_id.name" t-if="picking.partner_id"/>
                                        <t t-else="">N/A</t>
                                    </p>

                                    <p style="font-size: 22px; color: grey;">DOCUMENTO DE ORIGEN:</p>
                                    <p style="font-size: 35px; font-weight: bold;">
                                        <t t-esc="picking.origin" t-if="picking.origin"/>
                                        <t t-else="">N/A</t>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </t>
    </template>

    <!-- Acción de reporte -->
    <record id="action_report_stock_picking_test" model="ir.actions.report">
        <field name="name">Etiqueta Personalizada</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_stock_report.report_stock_picking_test</field>
        <field name="report_file">custom_stock_report.report_stock_picking_test</field>
    </record>
</odoo>
