<odoo>
    <template id="report_stock_picking_test">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div>
                    <h1>Reporte de Test de Transferencia</h1>
                    <!-- Si o.name no existe, se puede mostrar un mensaje alternativo -->
                    <p>Este es un reporte de prueba generado para la transferencia: 
                        <t t-if="o.name">
                            <t t-esc="o.name"/>
                        </t>
                        <t t-else="">
                            (Sin nombre)
                        </t>
                    </p>
                </div>
            </t>
        </t>
    </template>

    <!-- Action definition -->
    <record id="action_report_stock_picking_test" model="ir.actions.report">
        <field name="name">Stock Picking Test Report</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_stock_report.report_stock_picking_test</field>
        <field name="report_file">custom_stock_report.report_stock_picking_test</field>
    </record>
</odoo>
